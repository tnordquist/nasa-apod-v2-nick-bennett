<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="HistoryCard" parent="AppTheme">
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
    <item name="android:layout_margin">@dimen/card_spacing</item>
    <item name="contentPadding">@dimen/card_padding</item>
    <item name="cardElevation">@dimen/card_rest_elevation</item>
    <item name="cardMaxElevation">@dimen/card_max_elevation</item>
  </style>

  <style name="HistoryCardTextTheme" parent="AppTheme">
    <item name="android:textSize">@dimen/list_item_text_size</item>
    <item name="android:textColor">@color/staticText</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="DateText">
    <item name="android:textAlignment">viewEnd</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="CountText">
    <item name="android:textAlignment">viewEnd</item>
    <item name="android:textStyle">normal</item>
    <item name="android:paddingEnd">@dimen/item_spacing</item>
  </style>

  <style name="ColumnSeparator">
    <item name="android:layout_marginLeft">@dimen/column_half_margin</item>
    <item name="android:layout_marginRight">@dimen/column_half_margin</item>
    <item name="android:background">@color/columnSeparator</item>
  </style>

  <style name="BottomNavigator" parent="AppTheme">
    <item name="android:layout_marginStart">0dp</item>
    <item name="android:layout_marginEnd">0dp</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="itemIconTint">@color/bottom_navigation_item</item>
    <item name="itemTextColor">@color/bottom_navigation_item</item>
  </style>

  <style name="LinkLabel" parent="AppTheme">
    <item name="android:paddingEnd">@dimen/label_gap</item>
    <item name="android:layout_marginTop">@dimen/item_spacing</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
